<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".DownloadFilesActivity">

    <TextView
        android:id="@+id/txt_view_ApplicationText"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Attendace Application"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edt_enter_url"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/rel_btn_view_download_files"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_read_file"
            android:text="Read File"
            android:layout_width="180dp"
            android:textSize="22sp"
            android:layout_height="100dp"
            />
        <Button
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_download_file"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textSize="22sp"
            android:text="Download File"/>

    </RelativeLayout>


</LinearLayout>