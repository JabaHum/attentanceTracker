<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_row_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="4dp"
        >
        <RelativeLayout
            android:id="@+id/rel_layout_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:padding = "2dp"
                android:layout_margin="6dp"
                android:id="@+id/cardview_image"
                android:layout_alignParentStart="true"
                android:layout_width="120dp"
                android:layout_height="220dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <TextView
                android:id="@+id/cardview_name"
                android:layout_width="275dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/cardview_image"
                android:padding="2dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardview_student_id"
                android:layout_width="270dp"
                android:layout_height="61dp"
                android:layout_alignBottom="@id/cardview_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-75dp"
                android:layout_toEndOf="@id/cardview_image"
                android:textAlignment="textStart"
                android:textSize="24sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>